<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ListView
        android:id="@+id/pspdf__annotation_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.pspdfkit.ui.LocalizedTextView
        android:id="@+id/pspdf__annotation_list_empty_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/pspdf__no_annotations"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="21sp"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/pspdf__annotation_list_progress_bar"
        style="?android:progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</FrameLayout>